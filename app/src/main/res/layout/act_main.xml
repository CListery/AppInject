<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:onClick="startServer"
        android:text="Start Server" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:clickable="true"
        android:onClick="startCrashServer"
        android:text="Start CrashServer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:clickable="true"
        android:onClick="startTimerIntentServer"
        android:text="Start TimerIntentServer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:clickable="true"
        android:onClick="startTimerJobServer"
        android:text="Start TimerJobServer" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_end_call"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="goNext"
        android:src="@android:drawable/ic_lock_idle_lock" />

</RelativeLayout>